<div class="row-fluid clearfix offset2">	


	<ul class="nav nav-tabs">
		<li class="active"><a href="#">Participation</a></li>
		<li><a href="#">Basic Information</a></li>
		<li><a href="#">Relationships</a> </li>
	</ul>

	<%= render 'shared/error_messages', object: f.object %>

	<fieldset class="account-fields">
		<div class="form-group span9">
			<%= f.label :name %>
			<%= f.text_field :name, autofocus: true %>
		</div>
		<div class="form-group span2 pull-right">
			<%= f.label :tag %>
			<%= f.text_field :tag %>			
		</div>
	</fieldset><!--/.account-fields-->

	<fieldset class="sponsors-fields">	
		<%= f.fields_for :sponsors, @account.sponsors.order(:sort_order, :id) do |person| %>
			<%= render 'person_fields', f: person %>			
		<% end %>
		<%= link_to_add_fields "Add Person", f, :sponsors %>
	</fieldset><!--/.sponsors-fields-->



</div><!--/.row-->

