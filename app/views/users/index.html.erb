<% provide(:title, 'Users') %>
<h1>Users</h1>

<%= will_paginate %>

<%= form_tag users_path, method: 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search], class: "span4" %>
    <%= submit_tag "Search", name: nil, class: "btn btn-large btn-primary" %>
  </p>
<% end %>

<ul id="users" class="users">
	<%= render @users %>
</ul>

